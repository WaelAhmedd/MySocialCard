<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="handler"
          type="com.wael.android.mycard.Main.View.MainActivity.MainHandler"/>
        <variable
            name="userName"
            type="String" />
    </data>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.View.MainActivity"
    >

    <include
        android:id="@+id/include"
        layout="@layout/temp"
      />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:padding="2dp"

        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include"
        android:src="@drawable/user"
        />

    <Button
        android:id="@+id/view_card"
        style="@style/loginButton"
        android:text="@string/view_card"
        android:onClick="@{(v) -> handler.openCard(v)}"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage" />
    <Button
        android:id="@+id/edit_card"
        style="@style/loginButton"
        android:layout_margin="15dp"
        android:text="@string/edit_card"
        android:onClick="@{(v) -> handler.editCard(v)}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_card" />
    <Button
        android:id="@+id/search"
        style="@style/loginButton"
        android:layout_margin="15dp"
        android:text="@string/search_for_someone"
        android:onClick="@{(v) -> handler.doSearch(v)}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_card" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/search"
    android:layout_marginTop="50dp"
    >
    <TextView
        android:id="@+id/logout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:padding="15dp"
        android:textColor="@color/texts"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"

        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logout_image"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/logout_text"

        android:padding="2dp"
        android:src="@drawable/door"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="1dp"
        android:onClick="@{(v) -> handler.loOut(v)}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</RelativeLayout>






</androidx.constraintlayout.widget.ConstraintLayout>
</layout>